<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
        
    <g:DockLayoutPanel unit="PCT" addStyleNames="spacer">
        <g:center>
            <g:HTMLPanel>
                <div class="spacer">
                    <h1>JSON</h1>
                    <g:TextArea ui:field="jsonIn" visibleLines="30" />
                </div>
            </g:HTMLPanel>
        </g:center>

        <g:east size="40">
            <g:HTMLPanel>
                <div class="spacer">
                    <h1>JSONPath</h1>
                    JSONPath
                    <g:TextBox ui:field="jsonpath" />
                    <br />
                    <div class="spacerTop">
                        Context
                        <g:TextBox ui:field="context" title="A JSONPath expression to select the context object for relative JSONPath expressions. Leave empty to use the root." />
                        <br />
                    </div>
                    <div class="spacerTop">
                        <g:Button ui:field="select">Select</g:Button>
                    </div>
                    <h1>Result</h1>
                    <g:TextArea ui:field="jsonOut" visibleLines="15" readOnly="true" />
                </div>
            </g:HTMLPanel>
        </g:east>
    </g:DockLayoutPanel>
</ui:UiBinder> 
